{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Win Debug",
      "type": "shell",
      "command": "cl",
      "args": [
        "/MDd",
        "/W4",
        "/WX",
        "/permissive-",
        "/EHsc",
        "/ZI",
        "/std:c++17",
        "/Od",
        "/Fe:${workspaceFolder}/Debug/test.exe",
        "/Fd:${workspaceFolder}/Debug/",
        "/Fo:${workspaceFolder}/Debug/",
        "main.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Win Release",
      "type": "shell",
      "command": "cl",
      "args": [
        "/MD",
        "/W4",
        "/WX",
        "/permissive-",
        "/EHsc",
        "/std:c++17",
        "/O2",
        "/Fe:${workspaceFolder}/Release/test.exe",
        "/Fd:${workspaceFolder}/Release/",
        "/Fo:${workspaceFolder}/Release/",
        "main.cpp"
      ]
    },
    {
      "label": "Linux Debug",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "-g",
        "-Wall",
        "-std=c++17",
        "-o",
        "${workspaceFolder}/Debug/test",
        "-pthread"
      ],
    },
    {
      "label": "Linux Release",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "-Wall",
        "-O2",
        "-std=c++17",
        "-o",
        "${workspaceFolder}/Release/test",
        "-pthread"
      ],
    },
  ]
}